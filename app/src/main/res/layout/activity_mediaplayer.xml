<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="70dp"
        android:text="201611259 남궁건"
        app:layout_constraintBottom_toTopOf="@+id/controller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <kr.ac.konkuk.cse.exam4.VolumeControlView
        android:id="@+id/controller"
        android:layout_width="247dp"
        android:layout_height="236dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/knob" />

    <ImageButton
        android:id="@+id/stopBtn"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="175dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playBtn"
        app:layout_constraintTop_toBottomOf="@+id/controller"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@android:drawable/picture_frame" />

    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="175dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stopBtn"
        app:layout_constraintStart_toEndOf="@+id/pauseBtn"
        app:layout_constraintTop_toBottomOf="@+id/controller"
        app:layout_constraintVertical_bias="0.931"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/pauseBtn"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="35dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/playBtn"
        app:layout_constraintEnd_toStartOf="@+id/playBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playBtn"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@android:drawable/ic_media_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>